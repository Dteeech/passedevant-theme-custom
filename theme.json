{
    "$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "customGradient": true
        },
        "typography": {
            "customFontSize": true,
            "fontFamilies": [
                {
                    "name": "Space Grotesk",
                    "slug": "space-grotesk",
                    "fontFamily": "space-grotesk"
                },
                {
                    "name": "Poppins",
                    "slug": "poppins",
                    "fontFamily": "poppins"
                }
            ]
        },
        "spacing": [
            {
                "padding": true,
                "margin": true,
                "units": [
                    "px",
                    "em",
                    "rem",
                    "vh",
                    "vw"
                ]
            }
        ],
        "layout": {
            "contentSize": "840px",
            "wideSize": "1100px"
        }
    }
}